<%= simple_form_for(@location) do |f|%>
  <%= f.input :name %>
  <%= f.input :address,
              input_html: { data: { geocoder_target: "address" }, class: "d-none" },
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
  <%= f.input :category, collection: ["Changing Station", "Cafe & Restaurant", "Barrier Free Transit", "Playground", "Shop", "Doctor" ] %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
